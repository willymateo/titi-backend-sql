{
  "env": {
    "es2021": true,
    "node": true,
    "jest": true
  },
  "extends": ["google", "prettier"],
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module"
  },
  "rules": {
    "new-cap": ["error", { "capIsNew": false }],
    "require-jsdoc": "off",
    "valid-jsdoc": "off",
    "semi": ["error", "always"],
    "quotes": [
      "warn",
      "double",
      {
        "avoidEscape": true,
        "allowTemplateLiterals": true
      }
    ],
    "no-unused-vars": [
      "warn",
      {
        "vars": "all",
        "args": "all"
      }
    ]
  }
}
