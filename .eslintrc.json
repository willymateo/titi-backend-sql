{
  "env": {
    "browser": true,
    "es2021": true,
    "commonjs": true,
    "node": true,
    "jest": true
  },
  "extends": ["eslint:recommended", "prettier"],
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module"
  },
  "rules": {
    //Semicolon at end of line.
    "semi": ["error", "always"],
    //Double quotes.
    "quotes": [
      "warn",
      "double",
      {
        "avoidEscape": true,
        "allowTemplateLiterals": true
      }
    ],
    //Unused vars
    "no-unused-vars": [
      "warn",
      {
        "vars": "all",
        "args": "all"
      }
    ]
  }
}
